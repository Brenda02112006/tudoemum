<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Serviço</title>
    <link rel="stylesheet" href="/css/cadastro.css">
</head>
<body>
    <div class="container">
        <h2>Cadastro</h2>
       <!-- Seleção do Tipo de Cadastro -->
<div>
    <label>Tipo de Cadastro:</label>
    <div>
        <input type="radio" id="tipoCliente" name="tipoCadastro" value="cliente" required>
        <label for="tipoCliente">Cliente</label>

        <input type="radio" id="tipoEmpreendedor" name="tipoCadastro" value="empreendedor" required>
        <label for="tipoEmpreendedor">Empreendedor</label>
    </div>
</div>

    
        <form id="cadastroForm" action="/cadastro" method="post">
            <!-- Campos comuns -->
            <div class="campo">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" required>
            </div>
    
            <div class="campo">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
    
            <div class="campo">
                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" required>
            </div>
    
            <!-- Campos exclusivos do Empreendedor -->
            <div id="camposEmpreendedor" style="display: none;">
                <label for="categoria">Categoria do Serviço:</label>
                <select id="categoria" name="categoria">
                    <option value="">Selecione a categoria</option>
                    <option value="Construção">Construção</option>
                    <option value="Informática">Informática</option>
                    <option value="Beleza">Beleza</option>
                    <option value="Saúde">Saúde</option>
                    <option value="Educação">Educação</option>
                    <option value="Outros">Outros</option>
                </select>
            
    
                <label for="descricao">Descrição do Serviço (até 200 caracteres):</label>
                <textarea id="descricao" name="descricao" maxlength="200"></textarea>
                <p id="charCount">200 caracteres restantes</p>
    
                <label for="valor">Valor do Serviço:</label>
                <div>
                    <input type="radio" id="aCombinar" name="valorOpcao" value="aCombinar">
                    <label for="aCombinar">A combinar</label>
    
                    <input type="radio" id="fixo" name="valorOpcao" value="fixo">
                    <label for="fixo">Valor Fixo</label>
                </div>
                <input type="number" id="valorFixo" name="valorFixo" placeholder="Digite o valor (se fixo)" disabled>
            </div>
    
            <!-- Botão Cadastrar -->
            <button type="submit">Cadastrar</button>
        </form>
    
       <!-- Exibir a mensagem -->
       <% if (mensagem) { %>
        <div class="alert <%= mensagem.type %>">
            <%= mensagem.text %>
        </div>
    <% } %>
</div>

<script src="/js/cadastro.js"></script>
</body>
</html>